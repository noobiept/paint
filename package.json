{
    "name": "paint",
    "version": "1.4.0",
    "scripts": {
        "dev": "webpack serve --mode development --config webpack.config.js",
        "build": "webpack --mode production --config webpack.config.js",
        "format:check": "prettier --check \"**/*.{html,css,json,js,ts,tsx,md}\"",
        "format:run": "prettier --write \"**/*.{html,css,json,js,ts,tsx,md}\"",
        "lint": "eslint . --ext .ts,.tsx",
        "cy:open": "cypress open",
        "cy:run": "cypress run",
        "test": "start-server-and-test dev http://localhost:8000 cy:run"
    },
    "devDependencies": {
        "@types/jquery": "^3.5.4",
        "@types/jqueryui": "^1.12.2",
        "@typescript-eslint/eslint-plugin": "^4.7.0",
        "@typescript-eslint/parser": "^4.7.0",
        "clean-webpack-plugin": "^3.0.0",
        "copy-webpack-plugin": "^6.3.0",
        "css-loader": "^5.0.1",
        "cypress": "^5.6.0",
        "eslint": "^7.13.0",
        "eslint-config-prettier": "^6.15.0",
        "html-webpack-plugin": "^4.5.0",
        "prettier": "^2.1.2",
        "start-server-and-test": "^1.11.5",
        "style-loader": "^2.0.0",
        "ts-loader": "^8.0.11",
        "typescript": "^4.0.5",
        "webpack": "^5.4.0",
        "webpack-cli": "^4.2.0",
        "webpack-dev-server": "^3.11.0"
    },
    "prettier": {
        "printWidth": 80,
        "tabWidth": 4,
        "useTabs": false,
        "semi": true,
        "singleQuote": false,
        "trailingComma": "es5",
        "bracketSpacing": true,
        "arrowParens": "always",
        "htmlWhitespaceSensitivity": "strict",
        "endOfLine": "lf"
    },
    "dependencies": {
        "@drk4/utilities": "^4.0.0"
    }
}
