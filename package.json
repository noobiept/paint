{
    "name": "paint",
    "version": "1.4.0",
    "scripts": {
        "dev": "webpack serve --mode development --config webpack.config.js",
        "build": "webpack --mode production --config webpack.config.js",
        "format:check": "prettier --check \"**/*.{html,css,json,js,ts,tsx,md}\"",
        "format:run": "prettier --write \"**/*.{html,css,json,js,ts,tsx,md}\""
    },
    "devDependencies": {
        "@types/jquery": "^3.5.4",
        "@types/jqueryui": "^1.12.2",
        "clean-webpack-plugin": "^3.0.0",
        "copy-webpack-plugin": "^6.3.0",
        "html-webpack-plugin": "^4.5.0",
        "prettier": "^2.1.2",
        "ts-loader": "^8.0.11",
        "typescript": "^4.0.5",
        "webpack": "^5.4.0",
        "webpack-cli": "^4.2.0",
        "webpack-dev-server": "^3.11.0"
    },
    "prettier": {
        "printWidth": 80,
        "tabWidth": 4,
        "useTabs": false,
        "semi": true,
        "singleQuote": false,
        "trailingComma": "es5",
        "bracketSpacing": true,
        "arrowParens": "always",
        "htmlWhitespaceSensitivity": "strict",
        "endOfLine": "lf"
    }
}
