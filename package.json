{
    "name": "paint",
    "version": "1.4.0",
    "scripts": {
        "dev": "npm run dev:tsc & npm run dev:server",
        "dev:tsc": "tsc -w",
        "dev:server": "http-server . -o -s",
        "build": "grunt",
        "format:check": "prettier --check \"**/*.{html,css,json,js,ts,tsx,md}\"",
        "format:run": "prettier --write \"**/*.{html,css,json,js,ts,tsx,md}\""
    },
    "devDependencies": {
        "@types/jquery": "^3.5.4",
        "@types/jqueryui": "^1.12.2",
        "grunt": "^1.3.0",
        "grunt-contrib-clean": "^2.0.0",
        "grunt-contrib-copy": "^1.0.0",
        "grunt-contrib-cssmin": "^3.0.0",
        "grunt-processhtml": "^0.4.2",
        "grunt-terser": "^1.0.0",
        "grunt-ts": "^6.0.0-beta.22",
        "http-server": "^0.12.3",
        "prettier": "^2.1.2",
        "typescript": "^4.0.5"
    },
    "prettier": {
        "printWidth": 80,
        "tabWidth": 4,
        "useTabs": false,
        "semi": true,
        "singleQuote": false,
        "trailingComma": "es5",
        "bracketSpacing": true,
        "arrowParens": "always",
        "htmlWhitespaceSensitivity": "strict",
        "endOfLine": "lf"
    }
}
